{
  "compilerOptions": {
    "strict": true,
    "lib": [ "ESNext", "DOM" ],
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true
  },
  "include": [
    "./src"
  ]
}
